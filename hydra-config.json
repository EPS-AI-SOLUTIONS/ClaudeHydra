{
  "$schema": "https://hydra.dev/schemas/config.json",
  "version": "10.6.1",
  "name": "HYDRA Multi-CLI Dashboard",

  "dashboard": {
    "enabled": true,
    "default_view": "status",
    "witcher_mode": true
  },

  "swarm": {
    "enabled": true,
    "default_mode": true,
    "auto_activate": true,
    "protocol_steps": ["ROUTE", "SPECULATE", "PLAN", "EXECUTE", "SYNTHESIZE", "REPORT"]
  },

  "autonomy": {
    "level": "YOLO",
    "yolo_mode": true,
    "safe_mode": false
  },

  "providers": {
    "primary": "anthropic",
    "fallback_chain": ["anthropic", "google", "openai", "ollama"],
    "local": {
      "enabled": true,
      "host": "http://localhost:11434",
      "models": {
        "default": "llama3.2:3b",
        "fast": "llama3.2:1b",
        "coder": "qwen2.5-coder:1.5b"
      }
    }
  },

  "multi_cli": {
    "config_path": ".claude/config/multi-cli.json",
    "active_clis": ["hydra", "gemini", "jules", "codex", "grok"],
    "placeholder_clis": []
  },

  "response_contract": {
    "visual_summary": true,
    "actions_taken": true,
    "next_steps_count": 5,
    "confidence_score": true
  },

  "security": {
    "mode": "NORMAL",
    "secrets_in_env_only": true,
    "mask_secrets_in_logs": true
  },

  "paths": {
    "commands": ".claude/commands/",
    "hydra_spec": ".claude/hydra/",
    "config": ".claude/config/",
    "logs": "hydra-logs/",
    "backup": ".serena/backup/"
  },

  "fallback_config": {
    "enabled": true,
    "max_retries": 3,
    "retry_delay_ms": 1000,
    "circuit_breaker": {
      "enabled": true,
      "threshold": 5,
      "reset_timeout_ms": 60000
    },
    "chain": [
      { "provider": "anthropic", "timeout_ms": 30000 },
      { "provider": "google", "timeout_ms": 45000 },
      { "provider": "openai", "timeout_ms": 30000 },
      { "provider": "ollama", "timeout_ms": 120000, "local": true }
    ]
  },

  "debug": {
    "enabled": false,
    "log_level": "info",
    "log_requests": false,
    "log_responses": false,
    "correlation_id": true,
    "performance_metrics": true,
    "trace_agents": false,
    "output": {
      "console": true,
      "file": "hydra-logs/debug.log",
      "max_file_size_mb": 10
    }
  }
}
