{
  "$schema": "https://hydra.dev/schemas/config.json",
  "version": "10.6.1",
  "name": "HYDRA Multi-CLI Dashboard",

  "dashboard": {
    "enabled": true,
    "default_view": "status",
    "witcher_mode": true
  },

  "swarm": {
    "enabled": true,
    "default_mode": true,
    "auto_activate": true,
    "protocol_steps": ["ROUTE", "SPECULATE", "PLAN", "EXECUTE", "SYNTHESIZE", "REPORT"]
  },

  "autonomy": {
    "level": "STANDARD",
    "yolo_mode": false,
    "safe_mode": false
  },

  "providers": {
    "primary": "anthropic",
    "fallback_chain": ["anthropic", "google", "openai", "deepseek", "ollama"],
    "local": {
      "enabled": true,
      "host": "http://localhost:11434",
      "models": {
        "default": "llama3.2:3b",
        "fast": "llama3.2:1b",
        "coder": "qwen2.5-coder:1.5b"
      }
    }
  },

  "multi_cli": {
    "config_path": ".claude/config/multi-cli.json",
    "active_clis": ["hydra", "gemini", "jules", "deepseek"],
    "placeholder_clis": ["codex", "grok"]
  },

  "response_contract": {
    "visual_summary": true,
    "actions_taken": true,
    "next_steps_count": 5,
    "confidence_score": true
  },

  "security": {
    "mode": "NORMAL",
    "secrets_in_env_only": true,
    "mask_secrets_in_logs": true
  },

  "paths": {
    "commands": ".claude/commands/",
    "hydra_spec": ".claude/hydra/",
    "config": ".claude/config/",
    "logs": "hydra-logs/"
  }
}
