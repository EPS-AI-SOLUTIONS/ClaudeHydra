{
  "name": "claudehydra",
  "version": "2.1.0",
  "description": "ClaudeHydra - Unified CLI with Witcher Swarm (12 Agents)",
  "type": "module",
  "main": "src/server.ts",
  "exports": {
    ".": "./src/server.js",
    "./cli": "./src/cli-unified/index.js",
    "./cli-unified": "./src/cli-unified/index.js",
    "./cli-unified/*": "./src/cli-unified/*.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "cli": "node src/cli-unified/index.js",
    "cli:basic": "node src/cli-unified/index.js --mode basic",
    "cli:enhanced": "node src/cli-unified/index.js --mode enhanced",
    "cli:swarm": "node src/cli-unified/index.js --mode swarm",
    "hydra": "node src/cli-unified/index.js --mode swarm",
    "launcher": "node scripts/launcher.js",
    "bridge": "node scripts/bridge.js",
    "ai": "node scripts/ai-handler.js",
    "ai:query": "node scripts/ai-handler.js query",
    "ai:status": "node scripts/ai-handler.js status",
    "ai:list": "node scripts/ai-handler.js list",
    "swarm": "node src/cli-unified/index.js --mode swarm",
    "enhanced": "node src/cli-unified/index.js --mode enhanced",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "verify": "node scripts/verify-integrity.js && npm run test:coverage && npm run test:e2e",
    "audit": "npm audit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky install"
  },
  "bin": {
    "claudehydra": "src/cli-unified/index.js",
    "hydra-cli": "src/cli-unified/index.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "dotenv": "^17.2.3",
    "envalid": "^8.0.0",
    "i18next": "^25.5.2",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "node-notifier": "^10.0.1",
    "ora": "^9.3.0",
    "toml": "^3.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": "biome check --write"
  },
  "engines": {
    "node": ">=20"
  }
}
