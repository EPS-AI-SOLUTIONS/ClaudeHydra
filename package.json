{
  "name": "claudehydra",
  "version": "2.1.0",
  "description": "ClaudeHydra - Unified CLI with Witcher Swarm (12 Agents)",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": {
      "import": {
        "source": "./src/server.ts",
        "default": "./dist/server.js"
      }
    },
    "./cli": {
      "import": {
        "source": "./src/cli-unified/index.ts",
        "default": "./dist/cli-unified/index.js"
      }
    },
    "./cli-unified": {
      "import": {
        "source": "./src/cli-unified/index.ts",
        "default": "./dist/cli-unified/index.js"
      }
    },
    "./cli-unified/*": "./dist/cli-unified/*.js"
  },
  "scripts": {
    "start": "tsx src/server.ts",
    "cli": "tsx src/cli-unified/index.ts",
    "cli:basic": "tsx src/cli-unified/index.ts --mode basic",
    "cli:enhanced": "tsx src/cli-unified/index.ts --mode enhanced",
    "cli:swarm": "tsx src/cli-unified/index.ts --mode swarm",
    "hydra": "tsx src/cli-unified/index.ts --mode swarm",
    "hydra:test-sdk": "tsx src/cli-unified/index.ts --mode swarm --verbose --test-sdk",
    "dev:api": "node scripts/dev-api-server.mjs",
    "launcher": "node scripts/launcher.js",
    "bridge": "node scripts/bridge.js",
    "ai": "node scripts/ai-handler.js",
    "ai:query": "node scripts/ai-handler.js query",
    "ai:status": "node scripts/ai-handler.js status",
    "ai:list": "node scripts/ai-handler.js list",
    "swarm": "tsx src/cli-unified/index.ts --mode swarm",
    "enhanced": "tsx src/cli-unified/index.ts --mode enhanced",
    "prebuild": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true})\"",
    "build": "tsc",
    "postbuild": "echo Build complete - dist/ ready",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "verify": "node scripts/verify-integrity.js && npm run test:coverage && npm run test:e2e",
    "audit": "npm audit",
    "lint": "npx @biomejs/biome check .",
    "lint:fix": "npx @biomejs/biome check --write .",
    "format": "npx @biomejs/biome format --write .",
    "prepare": "husky install",
    "shortcut": "node scripts/create-shortcut-node.js",
    "shortcut:both": "node scripts/create-both-shortcuts-node.js",
    "shortcut:all": "powershell -ExecutionPolicy Bypass -File scripts/create-shortcut.ps1 -AllModes",
    "shortcut:verbose": "powershell -ExecutionPolicy Bypass -File scripts/create-shortcut.ps1 -Verbose"
  },
  "bin": {
    "claudehydra": "dist/cli-unified/index.js",
    "hydra-cli": "dist/cli-unified/index.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "dotenv": "^17.2.3",
    "envalid": "^8.0.0",
    "i18next": "^25.5.2",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "node-notifier": "^10.0.1",
    "ora": "^9.3.0",
    "toml": "^3.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": "npx @biomejs/biome check --write"
  },
  "engines": {
    "node": ">=20"
  }
}
