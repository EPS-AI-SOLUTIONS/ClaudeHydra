# CodexCLI Configuration
# Copy this file to .env and fill in your values

# Required: OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# Optional: Custom base URL (for Azure OpenAI or proxies)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Organization ID
# OPENAI_ORG_ID=org-xxxxx

# Model Configuration
CODEX_DEFAULT_MODEL=gpt-4o
CODEX_CODER_MODEL=gpt-4o
CODEX_FAST_MODEL=gpt-4o-mini
CODEX_REASONING_MODEL=o1-preview

# Generation Defaults
CODEX_TEMPERATURE=0.3
CODEX_MAX_TOKENS=4096
CODEX_TOP_P=1
CODEX_FREQUENCY_PENALTY=0
CODEX_PRESENCE_PENALTY=0

# Timeouts (in milliseconds)
CODEX_REQUEST_TIMEOUT_MS=120000
CODEX_HEALTH_CHECK_TIMEOUT_MS=10000

# Cache Configuration
CODEX_CACHE_DIR=./cache
CODEX_CACHE_TTL=3600
CODEX_CACHE_ENABLED=true

# Retry Configuration
CODEX_MAX_RETRIES=3
CODEX_RETRY_DELAY_BASE=1000

# Self-Correction
CODEX_SELF_CORRECT_ATTEMPTS=3

# Runtime Modes
# HYDRA_YOLO=false
# HYDRA_RISK_BLOCKING=true
CODEX_STREAMING=false

# Logging
LOG_LEVEL=info
