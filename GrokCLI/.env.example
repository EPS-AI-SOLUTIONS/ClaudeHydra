# GrokCLI Configuration
# Copy this file to .env and fill in your values

# Required: xAI API Key
# Get your API key from https://console.x.ai
XAI_API_KEY=your_xai_api_key_here

# Optional: API Base URL (default: https://api.x.ai/v1)
# XAI_API_BASE_URL=https://api.x.ai/v1

# Optional: Model Configuration
# GROK_DEFAULT_MODEL=grok-3
# GROK_FAST_MODEL=grok-3-fast
# GROK_VISION_MODEL=grok-2-vision-1212

# Optional: Request Configuration
# GROK_TEMPERATURE=0.7
# GROK_MAX_TOKENS=4096
# GROK_TIMEOUT_MS=120000
# GROK_MAX_RETRIES=3

# Optional: Rate Limiting
# GROK_RATE_LIMIT_RPM=60
# GROK_RATE_LIMIT_TPM=100000

# Optional: Features
# GROK_REALTIME_ENABLED=true
# GROK_DEEPSEARCH_ENABLED=true
# GROK_STREAM_ENABLED=true

# Optional: Logging
# LOG_LEVEL=info
