# Jules CLI Configuration
# ======================

# API Version
API_VERSION=v1

# Google/Jules Configuration (for future live API integration)
GOOGLE_API_KEY=
JULES_API_URL=https://jules.google/api/v1

# GitHub Integration
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=
GITHUB_DEFAULT_OWNER=
GITHUB_DEFAULT_REPO=

# Task Queue Configuration
TASK_STORE_DIR=./tasks
TASK_MAX_CONCURRENT=5
TASK_DEFAULT_TIMEOUT_MS=300000
TASK_POLL_INTERVAL_MS=5000
TASK_MAX_RETRIES=3
TASK_RETENTION_HOURS=24

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Runtime Modes
# Set to false when Jules API becomes publicly available
JULES_SIMULATION_MODE=true
GITHUB_ENABLED=true

# Health Check
HEALTH_CHECK_TIMEOUT_MS=5000
